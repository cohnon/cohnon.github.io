{% macro marquee(elements) %}
    <div class="marquee">
        <ul>
            {%- for element in elements -%}
                <li>[{{ element }}]</li>
            {%- endfor -%}
        </ul>

        <ul aria-hidden="true">
            {%- for element in elements -%}
                <li>[{{ element }}]</li>
            {%- endfor -%}
        </ul>
    </div>
{% endmacro %}
