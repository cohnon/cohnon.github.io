---
layout: base
---
<main id="blog-post">
    <article>
      <h1>{{ title }}</h1>
      <time>{{ date | formatDate }}</time>
      <div class="tags">
        {%- for tagItem in tags | filterTagList -%}
          <a href="/blog/tags/{{ tagItem | slugify }}/" class="tag-item">{{ tagItem }}</a>
        {%- endfor -%}
      </div>

      {{ content | safe }}

      <div class="bottom">
        <a href="/blog/">â†µ Back to all posts</a>
      </div>
      <hr>
    </article>
</main>
